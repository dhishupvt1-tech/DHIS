generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model attendance {
  id              BigInt   @id @default(autoincrement())
  time            DateTime @db.Time(6)
  date            DateTime @db.Date
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  is_active       Boolean  @default(true)
  event_id        BigInt
  user_id         String
  scanner_user_id String

  event        events @relation(fields: [event_id], references: [id], onDelete: Cascade)
  user         User   @relation("UserAttendance", fields: [user_id], references: [id], onDelete: Cascade)
  scanner_user User   @relation("ScannerAttendance", fields: [scanner_user_id], references: [id], onDelete: Cascade)
}

model events {
  id          BigInt   @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  name        String
  date        DateTime @db.Date
  start_time  DateTime
  end_time    DateTime
  description String?
  location    String?
  eventor_id  BigInt
  is_active   Boolean  @default(true)

  eventor    eventors     @relation(fields: [eventor_id], references: [id], onDelete: Cascade)
  attendance attendance[]
}

model eventors {
  id          BigInt   @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  name        String
  description String?
  is_active   Boolean  @default(true)

  events         events[]
  eventors_users eventors_users[]
}

model eventors_users {
  id         BigInt    @id @default(autoincrement())
  eventor_id BigInt
  user_id    String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  role       user_role

  eventor eventors @relation(fields: [eventor_id], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum user_role {
  ORGANIZER
  COORDINATOR
  MEMBER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  attendance         attendance[]     @relation("UserAttendance")
  scanner_attendance attendance[]     @relation("ScannerAttendance")
  eventors_users     eventors_users[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
